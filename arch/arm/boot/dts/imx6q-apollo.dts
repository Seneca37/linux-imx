/dts-v1/;

#include "imx6q.dtsi"
#include "silverbullet-common.dtsi"

/ {
	model = "Aesys i.MX6 Quad/Dual Apollo (1504)";
	compatible = "aesys,imx6q-apollo", "umobo,imx6q-silverbullet", "fsl,imx6q";
};

&i2c1 {
	/* Semtech SX8651 touchscreen */
	sx8651@49 {
		compatible = "semtech,sx8651";
		reg = <0x49>;
		interrupt-parent = <&gpio2>;
		interrupts = <4 IRQ_TYPE_EDGE_FALLING>;
	};
};

&mxcfb1 {
	/* Set default LCD mode */
	compatible = "fsl,mxc_sdc_fb";
	disp_dev = "lcd";
	interface_pix_fmt = "RGB24";
	mode_str ="AMPIRE-AM480272MNTMQW-T00H";
	default_bpp = <16>;
	int_clk = <0>;
	late_init = <0>;
	status = "ok";
};
